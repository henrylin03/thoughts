<article class="p-4 flex gap-4 shadow border border-gray-600 rounded-xl w-full">
  <div class="avatar flex-none">
    <div class="w-8 rounded-full">
      <img alt="Avatar" src="https://api.dicebear.com/9.x/initials/svg?seed='<%= thought.author_first_name %> <%= thought.author_last_name %>'" />
    </div>
  </div>
  <div class="flex-1 flex flex-col gap-2 prose">
    <header class="flex items-center justify-between">
      <p><%= thought.author_first_name %> <%=thought.author_last_name%></p>
      <p class="opacity-50"><%= thought.timeSincePosting %> ago</p>
    </header>
    <h2><%= thought.title %></h2>
    <p><%= thought.text %></p>
  </div>
</article>