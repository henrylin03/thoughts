<article class="p-4 flex gap-4 shadow border border-gray-600 rounded-xl">
  <div class="avatar flex-none">
    <div class="w-8 h-8 rounded-full">
      <img alt="Avatar" src="https://api.dicebear.com/9.x/initials/svg?seed='<%= thought.author_first_name %> <%= thought.author_last_name %>'" />
    </div>
  </div>
  <div class="flex-1 flex flex-col gap-1 w-8/10">
    <header class="flex items-center justify-between">
      <p class="text-sm"><%= thought.author_first_name %> <%=thought.author_last_name%></p>
      <p class="text-sm opacity-50"><%= thought.timeSincePosting %> ago</p>
    </header>
    <h2 class="text-2xl font-bold wrap-break-word hyphens-manual"><%= thought.title %></h2>
    <p class="wrap-break-word"><%= thought.text %></p>
  </div>
</article>